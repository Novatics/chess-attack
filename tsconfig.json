{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "strictNullChecks": false,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "outDir": "./build"
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ]
}